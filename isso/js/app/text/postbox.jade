div(class='isso-postbox')
    div(class='form-wrapper')
        div(class='textarea-wrapper')
            div(class='textarea placeholder' contenteditable='true')
                = i18n('postbox-text')
        section(class='auth-section')
            p(class='input-wrapper')
                input(type='hidden' name='author' placeholder=i18n('postbox-author'))
            p(class='input-wrapper')
                input(type='hidden' name='email' placeholder=i18n('postbox-email'))
            p(class='input-wrapper')
                input(type='hidden' name='website' placeholder=i18n('postbox-website'))
            p(class='post-action')
                input(type='submit' value=i18n('postbox-submit'))
